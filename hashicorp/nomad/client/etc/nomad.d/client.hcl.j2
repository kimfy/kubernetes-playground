data_dir  = "/opt/nomad"
bind_addr = "{{ IP_ADDRESS }}" 

advertise {
  # Defaults to the first private IP address.
  http = "{{ IP_ADDRESS }}"
  rpc  = "{{ IP_ADDRESS }}"
  serf = "{{ IP_ADDRESS }}:5648" # non-default ports may be specified
}

server {
  enabled = false
}

client {
  enabled = true
}

plugin "raw_exec" {
  config {
    enabled = true
  }
}

consul {
  address = "{{ CONSUL_INTERNAL_DOMAIN }}:8500"
}

ui {
  enabled =  true
}
